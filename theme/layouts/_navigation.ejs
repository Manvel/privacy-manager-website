<nav>
  <ul>
    <% for (const {id, title, link} of site.navigation) {%>
      <li>
        <% if (id) { %>
          <a href="<%- link %>" target="_blank">{<%= id %>(common)}</a>
        <% } else { %>
          <a href="<%- link %>" target="_blank"><%- title %></a>
        <% } %>
      </li>
    <% } %>
    <li class="desktop-hide">
      <% include _language %>
    </li>
  </ul>
</nav>
